<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditWallet">

    <TextView
        android:id="@+id/balance"
        android:layout_width="230dp"
        android:layout_height="90dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="412dp"
        android:contentDescription="Balance"
        android:text="TextView"
        android:textColor="#828282"
        android:textSize="60sp"
        android:visibility="visible"
        app:fontFamily="sans-serif"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="â‚¬ XX.XX" />

    <ImageButton
        android:id="@+id/minus"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:adjustViewBounds="true"
        android:background="#FFFFFF"
        android:contentDescription="@string/confirm"
        android:scaleType="fitCenter"
        android:src="@drawable/minusbutton"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/removeT2S"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.58"
        app:layout_constraintStart_toEndOf="@+id/add"
        app:layout_constraintTop_toBottomOf="@+id/fiftyeuro"
        app:layout_constraintVertical_bias="0.727" />

    <ImageButton
        android:id="@+id/add"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="56dp"
        android:layout_marginLeft="56dp"
        android:layout_marginBottom="8dp"
        android:adjustViewBounds="true"
        android:background="#FFFFFF"
        android:contentDescription="@string/add"
        android:scaleType="fitCenter"
        android:src="@drawable/plusbutton"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/addT2S"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/teneuro"
        app:layout_constraintVertical_bias="0.727" />

    <ImageView
        android:id="@+id/removeT2S"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="64dp"
        android:background="#FFFFFF"
        android:contentDescription="Text to Speech for remove"
        android:src="@drawable/text2speech"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/text2speech" />

    <ImageView
        android:id="@+id/addT2S"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="64dp"
        android:background="#FFFFFF"
        android:contentDescription="Text to Speech for Add"
        android:src="@drawable/text2speech"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/removeT2S"
        app:layout_constraintHorizontal_bias="0.388"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/text2speech"
        tools:ignore="NotSibling" />

    <ImageView
        android:id="@+id/teneuro"
        android:layout_width="156dp"
        android:layout_height="81dp"
        android:hapticFeedbackEnabled="?android:attr/windowOverscan"
        android:src="@drawable/ten_euro"
        app:srcCompat="@drawable/ten_euro"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="193dp"
        tools:targetApi="jelly_bean_mr2" />

    <ImageView
        android:id="@+id/twentyeuro"
        android:layout_width="156dp"
        android:layout_height="81dp"
        android:src="@drawable/twenty_euro"
        app:srcCompat="@drawable/twenty_euro"
        tools:layout_editor_absoluteX="203dp"
        tools:layout_editor_absoluteY="90dp" />

    <ImageView
        android:id="@+id/fiftyeuro"
        android:layout_width="156dp"
        android:layout_height="81dp"
        android:src="@drawable/fifty_euro"
        app:srcCompat="@drawable/fifty_euro"
        tools:layout_editor_absoluteX="203dp"
        tools:layout_editor_absoluteY="193dp" />

    <ImageView
        android:id="@+id/fiveeuro"
        android:layout_width="156dp"
        android:layout_height="81dp"
        android:src="@drawable/five_euro"
        app:srcCompat="@drawable/five_euro"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="90dp" />

    <ImageView
        android:id="@+id/back"
        android:layout_width="112dp"
        android:layout_height="67dp"
        app:srcCompat="@drawable/backbutton"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="447dp" />

</androidx.constraintlayout.widget.ConstraintLayout>