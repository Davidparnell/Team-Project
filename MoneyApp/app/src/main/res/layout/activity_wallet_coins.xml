<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/flexboxLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity ="center"
    >


    <ImageButton
        android:id="@+id/Confirm"
        android:layout_width="191dp"
        android:layout_height="60dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="91dp"
        android:layout_marginBottom="41dp"
        android:alpha=".2"
        android:background="@drawable/check"
        android:contentDescription="@string/confirm"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wallet"
        app:layout_constraintVertical_bias="0.0" />


    <ImageButton
        android:id="@+id/wallet"
        android:layout_width="wrap_content"
        android:layout_height="212dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/open_wallet2"
        android:contentDescription="@string/OpenWallet"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NoteCoin" />

    <Switch
        android:id="@+id/NoteCoin"
        style="@style/Widget.AppCompat.CompoundButton.Switch"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="187dp"
        android:layout_marginTop="356dp"
        android:layout_marginEnd="186dp"
        android:checked="true"
        android:switchMinWidth="50dp"
        android:textOff="@string/Note"
        android:textOn="@string/Coin"
        android:theme="@style/SwitchTheme"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.583"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:checked="true" />

    <ImageButton
        android:id="@+id/2_euro"
        android:layout_width="97dp"
        android:layout_height="97dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="96dp"
        android:contentDescription="@string/Coin2"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/2"
        tools:srcCompat="@drawable/2" />

    <ImageButton
        android:id="@+id/1_euro"
        android:layout_width="97dp"
        android:layout_height="97dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="36dp"
        android:contentDescription="@string/Coin1"
        app:layout_constraintEnd_toStartOf="@+id/50_cent"
        app:layout_constraintStart_toEndOf="@+id/2_euro"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/1" />

    <ImageButton
        android:id="@+id/50_cent"
        android:layout_width="97dp"
        android:layout_height="97dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="24dp"
        android:contentDescription="@string/Coin50"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/50c" />

    <ImageButton
        android:id="@+id/20_cent"
        android:layout_width="97dp"
        android:layout_height="97dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="34dp"
        android:contentDescription="@string/Coin20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/2_euro"
        app:srcCompat="@drawable/20c" />

    <ImageButton
        android:id="@+id/10_cent"
        android:layout_width="97dp"
        android:layout_height="97dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="36dp"
        android:contentDescription="@string/Coin10"
        app:layout_constraintEnd_toStartOf="@+id/5_cent"
        app:layout_constraintStart_toEndOf="@+id/20_cent"
        app:layout_constraintTop_toBottomOf="@+id/1_euro"
        app:srcCompat="@drawable/10c" />

    <ImageButton
        android:id="@+id/5_cent"
        android:layout_width="97dp"
        android:layout_height="97dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="24dp"
        android:contentDescription="@string/Coin5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/50_cent"
        app:srcCompat="@drawable/5c" />


</androidx.constraintlayout.widget.ConstraintLayout>