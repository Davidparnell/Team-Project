<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/flexboxLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:gravity="center">

    <ImageButton
        android:id="@+id/NoteButton"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="48dp"
        android:background="#FFFFFF"
        android:contentDescription="@string/Note"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/notebtn" />

    <ImageButton
        android:id="@+id/CoinButton"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="48dp"
        android:background="#FFFFFF"
        android:contentDescription="@string/Coin"
        app:layout_constraintStart_toEndOf="@+id/NoteButton"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/coinbtn" />

    <fragment
        android:id="@+id/MoneyMenu"
        android:name="com.moneyapp.Notes"
        android:layout_width="378dp"
        android:layout_height="500dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="27dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>