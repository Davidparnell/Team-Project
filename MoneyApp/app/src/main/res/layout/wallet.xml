<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fafafa"
    >
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center"
        android:paddingTop="30dp"

        android:paddingBottom="10dp"
        >

        <ImageButton
            android:id="@+id/euro50"
            android:background="@drawable/fifty_euro"
            android:layout_width="180dp"
            android:layout_height="105dp"
            android:layout_marginRight="5dp" />

        <ImageButton
            android:id="@+id/euro20"
            android:background="@drawable/twenty_euro"
            android:layout_height="105dp"
            android:layout_width="180dp"
            android:contentDescription="@string/camera"
            android:layout_marginLeft="5dp"
            />


    </TableRow>

    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center"
        android:padding="10dp"
        >

        <ImageButton
            android:id="@+id/euro10"
            android:background="@drawable/ten_euro"
            android:contentDescription="@string/Note10"
            android:layout_width="180dp"
            android:layout_height="105dp"
            android:layout_marginRight="5dp" />

        <ImageButton
            android:id="@+id/euro5"
            android:background="@drawable/five_euro"
            android:contentDescription="@string/Note5"
            android:layout_width="180dp"
            android:layout_height="105dp"
            android:layout_marginLeft="5dp"
            />


    </TableRow>

    <ImageButton
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="40dp"
        android:id="@+id/CoinBtn"
        android:background="#fafafa"
        android:contentDescription="@string/Change2Coin"
        app:srcCompat="@drawable/coinbtn_states" />

    <ImageButton
        android:paddingTop="20dp"
        android:scaleType="fitXY"
        android:layout_weight="1"
        android:layout_gravity="bottom"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:id="@+id/wallet"
        android:background="#fafafa"
        android:contentDescription="@string/wallet"
        android:src="@drawable/wallet3"
        android:visibility="visible"
        />



</LinearLayout>